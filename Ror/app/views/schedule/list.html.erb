<% if @schedules.blank? %>
<p>There are not any schedules currently in the system.</p>
<% else %>
<p>These are the current schedules in our system</p>

<ul id = "schedules">
   <% @schedules.each do |schedule| %>
    <li>
        <%= link_to schedule.restaurant.name, {:action => "show", :id => schedule.id} -%>
        <b> <%= link_to 'Edit', {:action => "edit",
            :id => schedule.id} %></b>
        <b> <%= link_to "Delete", {:action => 'delete', :id => schedule.id},
            :confirm => "Are you sure you want to delete this schedule?" %></b>
    </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Schedule", {:action => 'new' }%></p>