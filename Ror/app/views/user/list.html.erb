<% if @users.blank? %>
<p>There are not any users currently in the system.</p>
<% else %>
<p>These are the current users in our system</p>

<ul id = "users">
   <% @users.each do |user| %>
    <li>
        <%= link_to user.name + " " + user.last_name, {:action => "show", :id => user.id} -%>
        <b> <%= link_to 'Edit', {:action => "edit",
            :id => user.id} %></b>
        <b> <%= link_to "Delete", {:action => 'delete', :id => user.id},
            :confirm => "Are you sure you want to delete this user?" %></b>
    </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new User", {:action => 'new' }%></p>