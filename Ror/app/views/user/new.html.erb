<h1>Add new user</h1>

<%= form_tag :action => 'create' do %>

<p><label for = "user_name">Name</label>:
<%= text_field 'users', 'name' %></p>

<p><label for = "user_last_name">Last name</label>:
<%= text_field 'users', 'last_name' %></p>

<p><label for = "user_username">Username</label>:
<%= text_field 'users', 'username' %></p>

<p><label for = "user_password">Password</label>:
<%= password_field 'users', 'password' %></p>

<p><label for = "user_email">Email</label>:
<%= email_field 'users', 'email' %></p>

<%= submit_tag "Create" %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
