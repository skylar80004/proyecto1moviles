<% if @restaurants.blank? %>
<p>There are not any restaurants currently in the system.</p>
<% else %>
<p>These are the current restaurants in our system</p>

<ul id = "restaurants">
   <% @restaurants.each do |restaurant| %>
    <li>
        <%= link_to restaurant.name, {:action => "show", :id => restaurant.id} -%>
        <b> <%= link_to 'Edit', {:action => "edit",
            :id => restaurant.id} %></b>
        <b> <%= link_to "Delete", {:action => 'delete', :id => restaurant.id},
            :confirm => "Are you sure you want to delete this restaurant?" %></b>
    </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Restaurant", {:action => 'new' }%></p>