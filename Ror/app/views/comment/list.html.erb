<% if @comments.blank? %>
<p>There are not any comments currently in the system.</p>
<% else %>
<p>These are the comments users in our system</p>

<ul id = "comments">
   <% @comments.each do |comment| %>
    <li>
        <%= link_to comment.restaurant.name, {:action => "show", :id => comment.id} -%>
        <b> <%= link_to "Delete", {:action => 'delete', :id => comment.id},
            :confirm => "Are you sure you want to delete this comment?" %></b>
    </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Comment", {:action => 'new' }%></p>